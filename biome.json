{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  },
  "files": {
    "includes": [
      "!**/*.min.js",
      "!**/.env*",
      "!**/.netlify/**",
      "!**/.svelte-kit/**",
      "!**/.vercel/**",
      "!**/build/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/package-lock.json",
      "!**/pnpm-lock.yaml",
      "!**/vite.config.*.timestamp-*",
      "!**/yarn.lock",
      "**"
    ],
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "html": {
    "formatter": {
      "enabled": true,
      "indentScriptAndStyle": true
    },

    "experimentalFullSupportEnabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all"
    }
  }
}
